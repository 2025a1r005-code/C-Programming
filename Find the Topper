#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
struct marks{
    int ma;
    int sc;
    int eng;
    int com;
};
struct student{
    int roll;
    char name[50];
    int total;
    struct marks m;
};
int main() {
    int n;
    scanf("%d",&n);
    struct student s[n];
    for(int i=0;i<n;i++){
        scanf("%d",&s[i].roll);
        scanf(" %[^\n]%*c",s[i].name);
        scanf("%d",&s[i].m.ma);
        scanf("%d",&s[i].m.sc);
        scanf("%d",&s[i].m.eng);
        scanf("%d",&s[i].m.com);
        s[i].total=s[i].m.ma+s[i].m.sc+s[i].m.eng+s[i].m.com;
    }
    int topper=0;
    for(int i=0;i<n;i++){
        if(s[i].total>=s[topper].total){
            topper=i;
        }
    }
        printf("Topper Details:\nRoll No: %d\nName: %s\nTotal Marks: %d\n",s[topper].roll,s[topper].name,s[topper].total);    
    return 0;
}
