#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int powerOf10(int n) {
    if (n == 0)
        return 1;
    return 10 * powerOf10(n - 1);
}
int reverseNumber(int num) {
    if (num < 10)
        return num;

    int digits = 0, temp = num;
    while (temp >= 10) {
        temp /= 10;
        digits++;
    }
    return (num % 10) * powerOf10(digits) + reverseNumber(num / 10);
}
int main() {
    int n;
    scanf("%d", &n);
    printf("%d\n", reverseNumber(n));
    return 0;
}
